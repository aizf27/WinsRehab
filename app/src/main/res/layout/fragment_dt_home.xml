<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_50">

    <!-- 1. 顶部固定 Header -->
    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医生工作台"
                android:textColor="@color/blue_700"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_popup_reminder"
                        app:tint="@color/gray_600"/>
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="top|end"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="@color/red_500"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="切换账户"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"/>
            </LinearLayout>
        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_search_input"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"
            android:drawableTint="@color/gray_400"
            android:hint="搜索患者、病历..."
            android:paddingHorizontal="12dp"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 患者申请通知横幅 -->
    <LinearLayout
        android:id="@+id/layout_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF3E0"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layout_header">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_dialog_info"
            app:tint="#FF9800"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:id="@+id/tv_notification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="您有 2 个新患者申请"
            android:textColor="#E65100"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/btn_view_applications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看 >"
            android:textColor="#FF9800"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="4dp"/>

    </LinearLayout>

    <!-- 2. 可滚动区域 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_notification">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 欢迎卡片 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_dt_welcome_card"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="早上好，李医生"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_brief"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="今天有 3 个待审核视频，2 条患者反馈"
                    android:textColor="@color/white_alpha_90"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_greeting" />

                <!-- 简单统计行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tv_brief">

                    <!-- 统计项 1 -->
                    <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="管理患者" android:textColor="@color/white_alpha_90" android:textSize="12sp"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="15" android:textColor="@color/white" android:textStyle="bold" android:textSize="18sp"/>
                    </LinearLayout>
                    <!-- 统计项 2 -->
                    <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="待审核" android:textColor="@color/white_alpha_90" android:textSize="12sp"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3" android:textColor="@color/white" android:textStyle="bold" android:textSize="18sp"/>
                    </LinearLayout>
                    <!-- 统计项 3 -->
                    <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="待处理" android:textColor="@color/white_alpha_90" android:textSize="12sp"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5" android:textColor="@color/white" android:textStyle="bold" android:textSize="18sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 核心功能 Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SectionTitle"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:text="核心功能" />

            <!-- 核心功能 (硬编码展示 - GridLayout) -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2">

                <!-- 1. 管理患者 (Blue 3D) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_card_blue_3d"
                    android:elevation="4dp"
                    android:translationZ="2dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="#BFDBFE"
                        android:padding="6dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        app:tint="@color/blue_600"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="管理患者"
                        android:textColor="@color/gray_900"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15位患者"
                        android:textColor="@color/blue_600"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- 2. 审核视频 (Purple 3D) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_card_purple_3d"
                    android:elevation="4dp"
                    android:translationZ="2dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_circle"
                            android:backgroundTint="#E9D5FF"
                            android:padding="6dp"
                            android:src="@android:drawable/ic_media_play"
                            app:tint="@color/purple_600"/>
<!--                        &lt;!&ndash; 红色角标 &ndash;&gt;-->
<!--                        <TextView-->
<!--                            android:layout_width="16dp"-->
<!--                            android:layout_height="16dp"-->
<!--                            android:layout_gravity="top|end"-->
<!--                            android:background="@drawable/bg_circle"-->
<!--                            android:backgroundTint="@color/red_500"-->
<!--                            android:gravity="center"-->
<!--                            android:text="3"-->
<!--                            android:textColor="@color/white"-->
<!--                            android:textSize="8sp"-->
<!--                            android:layout_marginEnd="-4dp"-->
<!--                            android:layout_marginTop="-4dp"/>-->
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="审核视频"
                        android:textColor="@color/gray_900"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3个待审核"
                        android:textColor="@color/purple_600"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- 3. 制定计划 (Green 3D) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_card_green_3d"
                    android:elevation="4dp"
                    android:translationZ="2dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="#BBF7D0"
                        android:padding="6dp"
                        android:src="@android:drawable/ic_menu_agenda"
                        app:tint="#16A34A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="制定计划"
                        android:textColor="@color/gray_900"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2个待制定"
                        android:textColor="#16A34A"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- 4. 患者反馈 (Orange 3D) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_card_orange_3d"
                    android:elevation="4dp"
                    android:translationZ="2dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_circle"
                            android:backgroundTint="#FED7AA"
                            android:padding="6dp"
                            android:src="@android:drawable/ic_menu_edit"
                            app:tint="#EA580C"/>
<!--                        <TextView-->
<!--                            android:layout_width="16dp"-->
<!--                            android:layout_height="16dp"-->
<!--                            android:layout_gravity="top|end"-->
<!--                            android:background="@drawable/bg_circle"-->
<!--                            android:backgroundTint="@color/red_500"-->
<!--                            android:gravity="center"-->
<!--                            android:text="5"-->
<!--                            android:textColor="@color/white"-->
<!--                            android:textSize="8sp"-->
<!--                            android:layout_marginEnd="-4dp"-->
<!--                            android:layout_marginTop="-4dp"/>-->
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="患者反馈"
                        android:textColor="@color/gray_900"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5条新反馈"
                        android:textColor="#EA580C"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </GridLayout>


            <!-- 今日任务 Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/SectionTitle"
                    android:layout_weight="1"
                    android:text="今日任务"
                    android:layout_marginBottom="0dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看日历"
                    android:textColor="@color/blue_600"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--以后改 recycleView            -->
            <!-- 今日任务 (硬编码展示 - Vertical Layout) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 任务 1: 紧急 (Red) -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_rounded_white"
                    android:elevation="2dp">

                    <!-- 红色侧边 -->
                    <View
                        android:id="@+id/border_1"
                        android:layout_width="4dp"
                        android:layout_height="0dp"
                        android:background="@color/red_500"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btn_1"
                        app:layout_constraintStart_toEndOf="@id/border_1"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30分钟前"
                                android:textColor="@color/red_500"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_marginEnd="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="张先生"
                                android:textColor="@color/gray_900"
                                android:textStyle="bold"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="紧急：上肢训练视频待审核"
                            android:textColor="@color/gray_500"
                            android:textSize="13sp"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/btn_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/bg_rounded_btn_blue"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="处理"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 任务 2: 紧急 (Red) -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_rounded_white"
                    android:elevation="2dp">

                    <View
                        android:id="@+id/border_2"
                        android:layout_width="4dp"
                        android:layout_height="0dp"
                        android:background="@color/red_500"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btn_2"
                        app:layout_constraintStart_toEndOf="@id/border_2"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1小时前"
                                android:textColor="@color/red_500"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_marginEnd="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="李女士"
                                android:textColor="@color/gray_900"
                                android:textStyle="bold"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="反馈：训练后疼痛加剧"
                            android:textColor="@color/gray_500"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/btn_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/bg_rounded_btn_blue"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="查看"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 任务 3: 普通日程 (Blue) -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_rounded_white"
                    android:elevation="2dp">

                    <!-- 蓝色侧边 -->
                    <View
                        android:id="@+id/border_3"
                        android:layout_width="4dp"
                        android:layout_height="0dp"
                        android:background="@color/blue_500"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btn_3"
                        app:layout_constraintStart_toEndOf="@id/border_3"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="14:00"
                                android:textColor="@color/blue_600"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_marginEnd="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="王先生"
                                android:textColor="@color/gray_900"
                                android:textStyle="bold"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="定期随访：查看康复反馈"
                            android:textColor="@color/gray_500"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/btn_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/bg_rounded_btn_blue"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="开始"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>