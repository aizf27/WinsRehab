<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FDF4"> <!-- bg-green-50 -->

    <!-- 1. 顶部 Header (Sticky) -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="2dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 左侧 Icon -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_circle_green_light">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_activity"
                app:tint="#16A34A" />
        </FrameLayout>

        <!-- 标题文字 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="康复中心"
                android:textColor="#15803D"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第 28 天 · 继续加油"
                android:textColor="#6B7280"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- 切换账户按钮 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_outline_gray"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="切换账户"
            android:textColor="#4B5563"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- 2. 滚动内容 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- A. 今日进度卡片 (Gradient Card) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_pt_welcome_green"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="今日训练进度"
                                android:textColor="#E6FFFFFF"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/tvProgressCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2/4 项已完成"
                                android:textColor="@color/white"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="8dp"/>
                            <TextView
                                android:id="@+id/tvProgressPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="完成率: 50%"
                                android:textColor="#E6FFFFFF"
                                android:textSize="14sp"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_trending_up"
                            app:tint="#CCFFFFFF"/>
                    </LinearLayout>

                    <!-- 进度条 -->
                    <ProgressBar
                        android:id="@+id/progressBarToday"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="16dp"
                        android:progressDrawable="@drawable/custom_progress_bar_white"
                        android:progress="50"
                        android:max="100"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- B. 录制操作卡片 (包含两个状态) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- 状态 1: 未录制 (默认显示) -->
                    <LinearLayout
                        android:id="@+id/layoutStateIdle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible"> <!-- 控制这里的 visibility -->

                        <FrameLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/shape_circle_green_light"
                            android:layout_marginBottom="16dp">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_video"
                                app:tint="#16A34A"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开始康复训练"
                            android:textColor="#1F2937"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击开始录制您的康复训练视频"
                            android:textColor="#4B5563"
                            android:layout_marginBottom="24dp"
                            android:layout_marginTop="8dp"/>

                        <Button
                            android:id="@+id/btnStartRecord"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="▶  开始康复训练"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_btn_green_rounded"/>
                    </LinearLayout>

                    <!-- 状态 2: 录制中 (默认隐藏) -->
                    <LinearLayout
                        android:id="@+id/layoutStateRecording"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone"> <!-- 控制这里的 visibility -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_gray_rounded"
                            android:padding="32dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_marginBottom="16dp">

                            <!-- 红色脉冲圆圈 -->
                            <FrameLayout
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/shape_circle_red">
                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_video"
                                    app:tint="@color/white"/>
                            </FrameLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="录制中..."
                                android:layout_marginTop="12dp"
                                android:textColor="#4B5563"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnStopRecord"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="⏸  停止录制"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_btn_red_rounded"/> <!-- Red-500 -->
                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- C. 今日训练计划列表 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日训练计划"
                android:textColor="#1F2937"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- 列表项：你可以用 RecyclerView，这里用 include 模拟 -->
                <include layout="@layout/item_exercise_task" android:id="@+id/task1"/>
                <include layout="@layout/item_exercise_task" android:id="@+id/task2"/>
                <include layout="@layout/item_exercise_task" android:id="@+id/task3"/>
                <include layout="@layout/item_exercise_task" android:id="@+id/task4"/>
            </LinearLayout>

            <!-- D. 本周完成情况 (柱状图) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本周完成情况"
                android:textColor="#1F2937"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="24dp"
                    android:baselineAligned="false">

                    <!-- 使用 weight=1 均分7天 -->
                    <include layout="@layout/item_week_bar" android:id="@+id/weekBar1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                    <include layout="@layout/item_week_bar" android:id="@+id/weekBar2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                    <include layout="@layout/item_week_bar" android:id="@+id/weekBar3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                    <include layout="@layout/item_week_bar" android:id="@+id/weekBar4" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                    <include layout="@layout/item_week_bar" android:id="@+id/weekBar5" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                    <include layout="@layout/item_week_bar" android:id="@+id/weekBar6" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                    <include layout="@layout/item_week_bar" android:id="@+id/weekBar7" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- E. 底部统计格子 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include layout="@layout/item_stat_card" android:id="@+id/statCard1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="8dp"/>
                <include layout="@layout/item_stat_card" android:id="@+id/statCard2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="8dp"/>
                <include layout="@layout/item_stat_card" android:id="@+id/statCard3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>