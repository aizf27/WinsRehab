<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 顶部栏（仿QQ样式） -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 头像 -->
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/img_tx"
            android:scaleType="centerCrop"
            android:background="@drawable/shape_rounded_card_light"
            android:padding="2dp" />

        <!-- 昵称和个性签名 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="患者昵称"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个性签名..."
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/infoScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="vertical">

            <!-- 你的所有内容保持不变 -->
            <!-- 头像占位ImageButton -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/shape_rounded_card_light"
                    android:contentDescription="用户头像"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_tx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="点击更换头像(待实现)"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:text="基础信息"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- 姓名 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入姓名"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <!-- 个性签名 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个性签名:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_signature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="一句话介绍自己"
                    android:inputType="textCapSentences|textMultiLine" />
            </LinearLayout>

            <!-- 性别 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="男/女"
                    android:inputType="text" />
            </LinearLayout>

            <!-- 年龄 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年龄:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入年龄"
                    android:inputType="number" />
            </LinearLayout>

            <!-- 主治医师姓名 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主治医师:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_doctorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入主治医师姓名"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <!-- 主治医师工号 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主治医师工号:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_doctorCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入主治医师工号"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="6dp"
                android:text="康复信息"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- 诊断 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="诊断:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_diagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="诊断/病情描述"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <!-- 康复阶段 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="康复阶段:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_stage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="软瘫期/痉挛期/恢复期"
                    android:inputType="text" />
            </LinearLayout>

            <!-- 康复进度 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="康复进度:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0-100"
                    android:inputType="number" />
            </LinearLayout>

            <!-- AI 分析结果 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI分析:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_ai_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="AI 分析结果"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <!-- 最近训练日期 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最近训练:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_last_training"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="YYYY-MM-DD"
                    android:inputType="date" />
            </LinearLayout>

            <!-- 保存按钮 -->
            <Button
                android:id="@+id/btn_save"
                style="@style/MyRoundButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/green_shallow"
                android:text="保存信息" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>