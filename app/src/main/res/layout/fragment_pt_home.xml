<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/patient_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <!-- 顶部统计卡片区域 -->
    <LinearLayout
        android:id="@+id/stats_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 今日训练卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_today_training"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 图标和标题行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <!-- 圆形图标背景 -->
                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_circle_green_bg"
                        android:gravity="center">

                        <!-- 心跳/训练图标 -->
                        <ImageView
                            android:id="@+id/iv_training_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="训练图标"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_heart_beat" />
                    </FrameLayout>

                    <!-- 标题 -->
                    <TextView
                        android:id="@+id/tv_today_training_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="今日训练"
                        android:textSize="14sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <!-- 数值 -->
                <TextView
                    android:id="@+id/tv_today_training_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 项"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#00BC8C" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 完成进度卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 图标和标题行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <!-- 圆形图标背景 -->
                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_circle_green_bg"
                        android:gravity="center">

                        <!-- 进度/图表图标 -->
                        <ImageView
                            android:id="@+id/iv_progress_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="进度图标"
                            android:src="@drawable/ic_prossce" />
                    </FrameLayout>

                    <!-- 标题 -->
                    <TextView
                        android:id="@+id/tv_progress_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="完成进度"
                        android:textSize="14sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <!-- 数值 -->
                <TextView
                    android:id="@+id/tv_progress_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33%"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#00BC8C" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- 功能网格区域 -->
    <GridLayout
        android:id="@+id/patient_functions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="true"
        android:alignmentMode="alignMargins"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/stats_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 训练视频库卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTraining"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="10dp"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_blue_back"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="训练视频库"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="6dp"
                    android:text="医生示范动作" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 心理助手卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPsychology"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="10dp"
            android:padding="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_pink_back"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="心理助手"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="6dp"
                    android:text="心情打卡 and AI 励志" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 医生反馈卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="10dp"
            android:padding="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_yellow_back"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="医生反馈（敬请期待）"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="查看医生建议"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 病友社区卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="10dp"
            android:padding="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_grenn_back"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="病友社区（敬请期待）"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="排行榜 / 分享"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

