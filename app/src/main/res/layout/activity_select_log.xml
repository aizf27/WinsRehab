<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!--    tools:context=".ui.main.selectLog.selectLogActivity"-->

    <!--    <ImageView-->
    <!--        android:id="@+id/imageLogo"-->
    <!--        android:layout_width="120dp"-->
    <!--        android:layout_height="120dp"-->
    <!--        android:layout_marginTop="60dp"-->
    <!--        android:layout_gravity="center"-->
    <!--        android:src="@mipmap/ic_launcher_foreground"-->
    <!--        />-->
    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To You!"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/textSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the login method"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:layout_gravity="center"

        >

        <ImageButton
            android:id="@+id/imageDtLog"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/shape_logmap"
            android:scaleType="centerInside"
            android:src="@mipmap/img_dtlog"

            />

        <ImageButton
            android:id="@+id/imagePtLog"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/shape_logmap"
            android:scaleType="centerInside"
            android:src="@mipmap/img_userlog"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textDtLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Log "
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_margin="30dp"

            />
        <TextView
            android:id="@+id/PtLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Log "
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            />
    </LinearLayout>

</LinearLayout>