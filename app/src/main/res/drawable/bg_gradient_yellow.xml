<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 底层阴影效果 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="#20F59E0B"/>
        </shape>
    </item>
    <!-- 主渐变层 -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:startColor="#FFFBEB"
                android:centerColor="#FEF3C7"
                android:endColor="#FDE68A"
                android:angle="135"
                android:type="linear"/>
        </shape>
    </item>
    <!-- 顶部高光 -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90"
                android:type="linear"/>
        </shape>
    </item>
    <!-- 边框 -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <stroke
                android:width="1dp"
                android:color="#20F59E0B"/>
        </shape>
    </item>
</layer-list>
