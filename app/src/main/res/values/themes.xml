<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WinsRehab" parent="android:Theme.Material.Light.NoActionBar" >
        <item name="buttonStyle">@style/MyRoundButton</item>
<!--        <item name="materialButtonStyle">@style/MyRoundButton</item>-->


    </style>
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="MyRoundButton">MyRoundButton
        <item name="android:background">@drawable/shape_btn_round</item>

    </style>

        <!-- 板块标题样式 -->
        <style name="SectionTitle">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginBottom">12dp</item>
            <item name="android:textColor">#1F2937</item> <!-- gray-800 -->
            <item name="android:textSize">16sp</item>
            <item name="android:textStyle">bold</item>
        </style>

        <!-- 白色卡片容器样式 -->
        <style name="InfoCardStyle">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginBottom">24dp</item>
            <item name="cardCornerRadius">12dp</item>
            <item name="cardElevation">1dp</item> <!-- shadow-sm -->
            <item name="cardBackgroundColor">@color/white</item>
        </style>

        <!-- 分割线样式 -->
        <style name="Divider">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">1dp</item>
            <item name="android:background">#F3F4F6</item> <!-- gray-100 -->
        </style>


</resources>